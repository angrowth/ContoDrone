{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.6",
    "refresh": {
        "action": {
            "type": "Action.Execute",
            "verb": "refresh",
            "title": "Actualiser",
            "data": {
                "productId": "${productId}"
            }
        }
    },
    "body": [
        {
            "type": "Image",
            "width": "150px",
            "height": "100px",
            "url": "https://raw.githubusercontent.com/angrowth/ContoDrone/main/assets/images/ProductID_${productId}.jpg"
        },
        {
            "type": "Container",
            "separator": true,
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "size": "Large",
                                    "weight": "Bolder",
                                    "text": "${productName}",
                                    "wrap": true,
                                    "style": "heading"
                                }
                            ],
                            "width": 60
                        },
                        {
                            "type": "Column",
                            "width": 40,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${inventoryStatus}",
                                    "wrap": true,
                                    "horizontalAlignment": "Right",
                                    "isSubtle": true,
                                    "color": "${if(inventoryStatus == 'En stock', 'good', if(inventoryStatus == 'Faible stock', 'warning', 'attention'))}",
                                    "spacing": "None",
                                    "maxLines": 5
                                }
                            ]
                        }
                    ]
                }
            ],
            "bleed": true
        },
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "**üìçInformations sur le fournisseur**",
                    "wrap": true,
                    "size": "Medium",
                    "isSubtle": false
                },
                {
                    "type": "ColumnSet",
                    "separator": true,
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "FactSet",
                                    "spacing": "Large",
                                    "facts": [
                                        {
                                            "title": "Nom",
                                            "value": "${supplierName}"
                                        },
                                        {
                                            "title": "Ville",
                                            "value": "${supplierCity}"
                                        }
                                    ],
                                    "separator": true
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "**üõí Informations sur les stocks**",
                    "wrap": true,
                    "size": "Medium",
                    "isSubtle": false
                },
                {
                    "type": "ColumnSet",
                    "separator": true,
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "FactSet",
                                    "spacing": "Large",
                                    "facts": [
                                        {
                                            "title": "Cat√©gorie",
                                            "value": "${categoryName}"
                                        },
                                        {
                                            "title": "Prix unitaire",
                                            "value": "${unitPrice} EUR"
                                        },
                                        {
                                            "title": "R√©duction moyenne",
                                            "value": "${string(averageDiscount)} %"
                                        },
                                        {
                                            "title": "√âvaluation des stocks",
                                            "value": "${string(inventoryValue)} EUR"
                                        }
                                    ],
                                    "separator": true
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "FactSet",
                                    "spacing": "Large",
                                    "facts": [
                                        {
                                            "title": "Unit√©s en stock",
                                            "value": "${string(unitsInStock)}"
                                        },
                                        {
                                            "title": "Unit√©s en commande",
                                            "value": "${string(unitsOnOrder)}"
                                        },
                                        {
                                            "title": "Niveau de commande",
                                            "value": "${string(reorderLevel)}"
                                        },
                                        {
                                            "title": "Revenus de la p√©riode",
                                            "value": "${string(revenue)} EUR"
                                        }
                                    ],
                                    "separator": true
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.ShowCard",
                            "title": "Agir",
                            "card": {
                                "type": "AdaptiveCard",
                                "body": [
                                    {
                                        "type": "Input.Text",
                                        "id": "txtStock",
                                        "label": "Quantit√©",
                                        "min": 0,
                                        "max": 9999,
                                        "errorMessage": "Invalid input, use whole positive number",
                                        "style": "Tel"
                                    }
                                ],
                                "actions": [
                                    {
                                        "type": "Action.Execute",
                                        "title": "Actualiser ‚úÖ",
                                        "verb": "ok",
                                        "data": {
                                            "productId": "${productId}"
                                        }
                                    },
                                    {
                                        "type": "Action.Execute",
                                        "title": "R√©assort üì¶",
                                        "verb": "restock",
                                        "data": {
                                            "productId": "${productId}"
                                        }
                                    },
                                    {
                                        "type": "Action.Execute",
                                        "title": "Annuler ‚ùå",
                                        "verb": "cancel",
                                        "data": {
                                            "productId": "${productId}"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    ]
}